{
  "openapi": "3.0.0",
  "info": {
    "title": "CineStream OTT Platform API",
    "version": "1.0.0",
    "description": "Swagger API documentation for CineStream Node.js backend"
  },
  "servers": [
    {
      "url": "http://localhost:4000/api/v1"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
